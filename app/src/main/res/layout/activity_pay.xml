<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yonggang.liyangyang.businesscard.PayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/magin_10"
            android:gravity="center"
            android:text="确认卡信息，如有误，请联系管理员"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/main_title_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/magin_10"
            android:orientation="horizontal"
            android:paddingStart="@dimen/magin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡号:  "
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/txt_card_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/magin_10"
            android:orientation="horizontal"
            android:paddingStart="@dimen/magin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡余额:  "
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/txt_lest_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/magin_10"
            android:orientation="horizontal"
            android:paddingStart="@dimen/magin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费金额:  "
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/txt_pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/magin_10"
            android:orientation="horizontal"
            android:paddingStart="@dimen/magin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="折扣:  "
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/magin_10"
            android:orientation="horizontal"
            android:paddingStart="@dimen/magin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打折金额:  "
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/txt_discount_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/magin_10"
            android:orientation="horizontal"
            android:paddingStart="@dimen/magin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实付金额:  "
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/txt_pay_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/magin_10"
            android:orientation="horizontal"
            android:paddingStart="@dimen/magin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结后余额:  "
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size18" />

            <TextView
                android:id="@+id/txt_rest_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size18" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width55"
            android:layout_marginBottom="@dimen/magin_10"
            android:layout_marginEnd="@dimen/magin_20"
            android:layout_marginStart="@dimen/magin_20"
            android:layout_marginTop="@dimen/magin_10"
            android:background="@drawable/button_register_login"
            android:text="确定"
            android:textColor="@color/colorBlank"
            android:textSize="@dimen/text_size18" />

    </LinearLayout>

</ScrollView>
